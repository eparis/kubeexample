apiVersion: v1beta1
id: multicontainer
desiredState:
  manifest:
    version: v1beta1
    id: multicontainer
    containers:
      - name: mongodb
        image: localhost:5000/mongodb
        ports: [{
          containerPort: 27017,
          hostPort: 27017
        }]
    containers:
      - name: rockmongo
        image: localhost:5000/rockmongo
        ports: [{
          containerPort: 80,
          hostPort: 6060
        }]
